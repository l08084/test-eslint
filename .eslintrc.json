{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json", "e2e/tsconfig.json"],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:lookbehind-assertions/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      // "plugins": ["lookbehind-assertions"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ]
        // "lookbehind-assertions/no-lookbehind-assertions-regexp": "error"
      }
    },
    {
      "files": ["*.html"],
      "parser": "@angular-eslint/template-parser",
      "plugins": ["ionic-tappable"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": { "ionic-tappable/click-events-have-tappable": "warn" }
    }
  ]
}
